{
  "scripts": {
    "start": "webpack-dev-server --config ./config/webpack.config.dev.js",
    "http-server": "http-server --silent -c-1",
    "build": "webpack -p --config ./config/webpack.config.prod.js",
    "test": "jest"
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          ["es2015", { "modules": false }],
          "react"
        ]
      },
      "test": {
        "presets": [
          "es2015",
          "react"
        ]
      }
    }
  },
  "jestWebpackResolver": {
    "webpackConfig": "./config/webpack.config.test.js"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true,
    "testRegex": "-test.+(js|jsx)",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/js"
    ],
    "moduleNameMapper": {
      "\\.(css|scss|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/js/test/mocks/noop.js"
    },
    "resolver": "jest-webpack-resolver",
    "setupFiles": ["<rootDir>/js/test/jest.setup.js"]
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "css-loader": "^0.26.2",
    "directory-named-webpack-plugin": "^2.2.3",
    "enzyme": "^2.9.1",
    "extract-text-webpack-plugin": "^2.0.0",
    "html-webpack-plugin": "^2.28.0",
    "http-server": "0.9.0",
    "inline-manifest-webpack-plugin": "^3.0.1",
    "jest": "^20.0.0",
    "jest-webpack-resolver": "^0.1.1",
    "null-loader": "^0.1.1",
    "resolve-url": "^0.2.1",
    "resolve-url-loader": "^2.0.0",
    "style-loader": "^0.13.2",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^3.0.0"
  },
  "dependencies": {
    "classnames": "2.1.5",
    "director": "1.2.0",
    "react": "0.13.3",
    "todomvc-app-css": "2.0.0",
    "todomvc-common": "1.0.1"
  }
}
